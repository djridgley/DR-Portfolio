{
  "name": "dr-portfolio",
  "version": "1.0.0",
  "description": "My Portfolio Site",
  "main": "index.js",
  "author": "David Ridgley",
  "license": "MIT",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "serve": "live-server --browser=firefox",
    "devserver": "npm-run-all --parallel serve watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/animate.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "delete:css": "del-cli css/style.comp.css css/style.concat.css css/style.prefix.css",
    "build": "npm-run-all compile:sass concat:css prefix:css compress:css delete:css"
  },
  "devDependencies": {
    "autoprefixer": "^8.3.0",
    "concat": "^1.0.3",
    "del-cli": "^1.1.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0"
  },
  "dependencies": {
    "express": "^4.16.3"
  }
}
